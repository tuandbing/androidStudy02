<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowOrderPreserved="true"
    android:orientation="vertical"
    android:alignmentMode="alignBounds">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@mipmap/v_ico1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:text="你好啊"
            android:layout_marginStart="20dp"
            android:textSize="30sp"
            android:background="#FF00FFFF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/tv2"
            android:layout_marginStart="200dp"
            android:text="你好啊"
            android:textSize="30sp"
            android:background="#FF00FF00"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv2"
            android:layout_marginEnd="0dp"
            android:background="@mipmap/v_ico1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@mipmap/v_ico1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:text="约吗"
            android:layout_marginStart="20dp"
            android:textSize="30sp"
            android:background="#FF00FFFF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv4"
            android:layout_marginStart="200dp"
            android:text="不约"
            android:textSize="30sp"
            android:background="#FF00FF00"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:background="@mipmap/v_ico1" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@mipmap/v_ico1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <!--        #FF00FF00-->
        <TextView
            android:text="好的"
            android:layout_marginStart="20dp"
            android:textSize="30sp"
            android:background="#FF00FFFF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tvv"
            android:layout_marginStart="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!"
            android:textColor="#FFFF0000"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FF00FF00"
            android:layout_marginLeft="10dp"
            android:text="嗯"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/iv6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:background="@mipmap/v_ico1" />

    </LinearLayout>

</GridLayout>